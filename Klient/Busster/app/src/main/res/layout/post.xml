<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/post"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:minHeight="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Body"
                android:id="@+id/body"
                android:width="280dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:minHeight="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="USER"
                android:id="@+id/user"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="U"
                android:id="@+id/votesUp"
                android:layout_below="@+id/user"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="D"
                android:id="@+id/votesDown"
                android:layout_below="@+id/votesUp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="S"
                android:id="@+id/service"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/ic_action_directions_bus"
                android:drawablePadding="4dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="T"
                android:id="@+id/time"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/user"
                android:gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="C"
                android:id="@+id/comments"
                android:drawableLeft="@drawable/ic_action_comment_b"
                android:drawablePadding="4dp"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/user"
                android:layout_marginEnd="100dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>