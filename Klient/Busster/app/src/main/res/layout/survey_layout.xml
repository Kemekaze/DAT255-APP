<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"

    android:background="#c5cae9"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="17dp"
    android:paddingBottom="15dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Body"
        android:id="@+id/body"
        android:width="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:minHeight="90dp"
        android:textColor="#FFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="USER"
        android:id="@+id/user"
        android:textColor="#EEE"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="T"
        android:id="@+id/time"
        android:gravity="right"
        android:textColor="#EEE"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/user"

        />

    <android.support.design.widget.FloatingActionButton android:id="@+id/resOne"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_action_add"
        android:onClick="addPostActivity"
        android:nestedScrollingEnabled="true"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/resCross"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_action_add"
        android:onClick="addPostActivity"
        android:nestedScrollingEnabled="true"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignTop="@+id/resOne"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/resTwo"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_action_add"
        android:onClick="addPostActivity"
        android:nestedScrollingEnabled="true"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignTop="@+id/resCross"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
